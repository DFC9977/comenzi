rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper: check if caller is admin
    function isAdmin() {
      return request.auth != null &&
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // Helper: check if caller is authenticated
    function isAuth() {
      return request.auth != null;
    }

    // Users collection
    match /users/{uid} {
      allow read: if isAuth() && (request.auth.uid == uid || isAdmin());
      allow create: if isAuth() && request.auth.uid == uid;
      allow update: if isAuth() && (request.auth.uid == uid || isAdmin());
      allow delete: if isAdmin();
    }

    // Orders collection
    match /orders/{orderId} {
      allow read: if isAuth() && (
        resource.data.clientId == request.auth.uid || isAdmin()
      );
      allow create: if isAuth();
      allow update: if isAuth() && (
        resource.data.clientId == request.auth.uid || isAdmin()
      );
      allow delete: if isAdmin();

      // Messages subcollection
      match /messages/{msgId} {
        allow read: if isAuth() && (
          get(/databases/$(database)/documents/orders/$(orderId)).data.clientId == request.auth.uid || isAdmin()
        );
        allow create: if isAuth() && (
          get(/databases/$(database)/documents/orders/$(orderId)).data.clientId == request.auth.uid || isAdmin()
        );
        allow update: if isAuth() && (
          get(/databases/$(database)/documents/orders/$(orderId)).data.clientId == request.auth.uid || isAdmin()
        );
        allow delete: if isAdmin();
      }
    }

    // Products — read by any authenticated user, write by admin only
    match /products/{productId} {
      allow read: if isAuth();
      allow write: if isAdmin();
    }

    // Promotions — read by any authenticated user, write by admin only
    match /promotions/{promoId} {
      allow read: if isAuth();
      allow write: if isAdmin();
    }

    // Counters — read/write by authenticated users (order number increment)
    match /counters/{counterId} {
      allow read, write: if isAuth();
    }

    // Counties — read by any authenticated user, write by admin only
    match /counties/{countyId} {
      allow read: if isAuth();
      allow write: if isAdmin();
    }

    // Password reset requests — anyone can create (unauthenticated users too)
    // Only admins can read/update/delete
    match /passwordResetRequests/{reqId} {
      allow create: if true;
      allow read, update, delete: if isAdmin();
    }

  }
}
